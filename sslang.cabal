  hs-source-dirs:
      test/lib
      test/trans
  build-tool-depends:
      hspec-discover:hspec-discover
  build-depends:
      HUnit
    , base >=4.7 && <5
    , call-stack
    , comonad
    , containers
    , deepseq
    , here
    , hspec
    , sslang
    , syb
    , template-haskell
