// checking that 3-tuples and 4-tuples can be declared with new syntax
type Pair2 a b
    Pair2 a b


type Pair3 a b c
  Pair3 a b c


type Pair4 a b c d
    Pair4 a b c d

putip_ putc x =
  if x < 10
    putc (x + 48)
  else
    putip_ putc (x / 10)
    putc (48 + x % 10)

puti_ putc x =
  if x < 0
    putc 45 // -
    putip_ putc (0 - x)
  else
    putip_ putc x

// test match nested tuples ((x,y),z)
print_nested puti putc tuptup = 
    match tuptup 
      ((x,y),z) = puti x
                  putc 32
                  puti y
                  putc 32
                  puti z

